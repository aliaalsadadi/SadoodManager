<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.ConfirmationCodeController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <center>
        <VBox alignment="center" spacing="10">
            <Label styleClass="title-label" text="Enter Confirmation Code sent to your email" />

            <HBox alignment="center" spacing="10">
                <Label styleClass="input-label" text="Confirmation Code:" />
                <TextField fx:id="confirmationCodeField" styleClass="text-field" />
            </HBox>

            <Button fx:id="confirmButton" styleClass="confirm-button" text="Confirm" onAction="#validateCode"/>
        </VBox>
    </center>

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
</BorderPane>
